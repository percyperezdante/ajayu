{
  "variables": {
    "version": "6.10-SNAPSHOT"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "15s",
      "disk_size": 51200,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Oracle_64",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "dd7231b378f23e2e846ac78b0c5d8974a23631d5",
      "iso_checksum_type": "sha1",
      "iso_url": "http://mirrors.kernel.org/oracle/OL6/U7/x86_64/OracleLinux-R6-U7-Server-x86_64-dvd.iso",
      "communicator": "ssh",
      "ssh_username": "root",
      "ssh_password": "oracle",
      "ssh_port": 22,
      "ssh_pty": true,
      "ssh_wait_timeout": "10000s",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'percy'|sudo -S sh 'shutdown.sh'"
    }
  ],
  "provisioners": [
      	{
			"type": "shell",
			"script": "scripts/vagrant.sh",
			"only": ["virtualbox-iso"]
		},
		{
			"type": "shell",
			"scripts": [
				"scripts/install_base_packages.sh",
				"scripts/reboot.sh"
			]
		},
		{
			"type": "shell",
			"pause_before": "10s",
			"script": "scripts/virtualbox.sh",
			"only": ["virtualbox-iso"]
		},
		{
			"type": "shell",
			"script": "scripts/cleanup.sh"
		}
 ],
  "post-processors": [
    {
      "output": "oracle-linux-6-x86_64_packer-{{user `version`}}.box",
      "type": "vagrant"
    }
  ]
}
